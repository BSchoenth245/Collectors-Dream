{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "collectors-dream",
  "version": "2.0.1",
  "description": "A database management system for collectors",
  "main": "main.js",
  "scripts": {
    "start": "node start-app.js",
    "desktop": "electron .",
    "build": "electron-builder --win --linux",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux",
    "release": "electron-builder --win --linux --publish=always"
  },
  "author": {
    "name": "Brock Schoenthlaer",
    "email": "brockschoenthaler@gmail.com"
  },
  "homepage": "https://github.com/BSchoenth245/Collectors-Dream",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "sqlite3": "^5.1.6",
    "electron-updater": "^6.1.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.collectorsdream.app",
    "productName": "Collectors Dream",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!data/**/*",
      "!dist/**/*",
      "!setup.js",
      "!mongodb-installer.js"
    ],
    "publish": {
      "provider": "github",
      "owner": "BSchoenth245",
      "repo": "Collectors-Dream"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/colored-logo.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "category": "Utility"
    }
  }
}
